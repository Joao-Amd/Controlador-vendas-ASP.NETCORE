@using ControladorVendasASP.NET.Models
@model Cliente
@{
    ViewData["Title"] = "Confirmação Remover Cliente";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Cliente (@Model.Nome)?</h3>
</div>


<a class="btn btn-primary" role="button" asp-controller="Cliente" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger"role="button" asp-controller="Cliente" asp-action="Remover" asp-route-id="@Model.Id">Confirmar exclusão</a>


