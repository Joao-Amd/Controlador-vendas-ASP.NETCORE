@using ControladorVendasASP.NET.Models
@model Fornecedor
@{
    ViewData["Title"] = "Confirmação Remover Fornecedor";
}

<div class="text-center">
    <h3>Realmente deseja apagar o Fornecedor (@Model.Nome)?</h3>
</div>


<a class="btn btn-primary" role="button" asp-controller="Fornecedor" asp-action="Index">Cancelar exclusão</a>
<a class="btn btn-danger"role="button" asp-controller="Fornecedor" asp-action="Remover" asp-route-id="@Model.Id">Confirmar exclusão</a>


